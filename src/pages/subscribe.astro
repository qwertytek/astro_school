---
export const prerender = false
import BaseLayout from "@layouts/BaseLayout.astro";
import { sanityClient } from "sanity:client";
import { getLang } from '@utils/getLang';

const lang = getLang(Astro.params);

const subscribePageContent = await sanityClient.fetch(
    `*[_type == "subscribePage" && !(_originalId in path("drafts.**"))][0]`
);

const { description, form, title } = subscribePageContent.newsletterSubscription

if (Astro.request.method === "POST") {
    try {
    const data = await Astro.request.formData();
    const email = data.get("email");

    const submitForm = await sanityClient.create({
        _type: "formSubscription",
        email,
    });

    console.log('submitform',submitForm, email)
  } catch (error) {
    if (error instanceof Error) {
      console.error(error.message);
    }
  }
}

---

<BaseLayout title="Subscribe - Next Generation Academy">
    <div class="flex flex-col min-h-screen">
        <!-- Logo at the top -->
        <div class="flex justify-center pt-8 pb-4 mb-20">
            <a class="flex items-center justify-center text-2xl font-bold text-slate-800 dark:text-white" href="/">
                <span class="material-symbols-outlined text-[var(--primary-color)] text-4xl mr-2">code</span>
                Next Generation Academy
            </a>
        </div>
        
        <!-- Main content centered in the middle -->
        <main class="flex flex-col items-center flex-grow p-4">
            <div class="text-center mb-20">
                <h1 class="text-4xl md:text-5xl font-bold text-slate-900 dark:text-white mb-4 font-display">
                    {title[lang]}
                </h1>
                <p class="text-lg text-slate-600 dark:text-slate-300 max-w-2xl mx-auto">
                    {description[lang]}
                </p>
            </div>
            
            <div class="w-full max-w-md bg-white dark:bg-slate-800 p-8 rounded-lg shadow-lg">
                <form method="POST" class="space-y-6">
                    <div>
                        <label class="block mb-2 text-sm font-medium text-slate-700 dark:text-slate-300" for="email">
                            {form.emailLabel[lang]}
                        </label>
                        <div class="relative">
                            <span class="material-symbols-outlined absolute left-3 top-1/2 -translate-y-1/2 text-slate-400">
                                email
                            </span>
                            <input
                                class="bg-slate-50 dark:bg-slate-700 border border-slate-300 dark:border-slate-600 text-slate-900 dark:text-white text-sm rounded-lg focus:ring-[var(--primary-color)] focus:border-[var(--primary-color)] block w-full pl-10 p-2.5 transition-colors" 
                                id="email"
                                name="email"
                                placeholder={form.emailPlaceholder[lang]}
                                required
                                type="email"
                            />
                        </div>
                    </div>
                    
                    <div class="flex items-start">
                        <div class="flex items-center h-5">
                            <input 
                                class="w-4 h-4 border border-slate-300 rounded bg-slate-50 focus:ring-3 focus:ring-[var(--primary-color)] dark:bg-slate-700 dark:border-slate-600 dark:focus:ring-[var(--primary-color)] dark:ring-offset-slate-800" 
                                id="terms" 
                                required 
                                type="checkbox" 
                                value=""
                            />
                        </div>
                        <label class="ml-2 text-sm font-medium text-slate-900 dark:text-slate-300" for="terms">
                            {form.termsOfSubscription[0][lang]}
                            <a class="text-[var(--primary-color)] hover:underline" href="termsConditions">
                                {form.termsOfSubscription[1][lang]}
                            </a>
                        </label>
                    </div>
                    
                    <button 
                        class="w-full text-white bg-[var(--primary-color)] hover:bg-opacity-90 focus:ring-4 focus:outline-none focus:ring-blue-300 font-medium rounded-lg text-sm px-5 py-2.5 text-center transition-all transform hover:-translate-y-0.5 glow-effect-sm" 
                        type="submit"
                    >
                        {form.submitButtonText[lang]}
                    </button>
                </form>
                
                <p class="text-xs text-slate-500 dark:text-slate-400 mt-4 text-center">
                    {form.privacyNotice[lang]}
                </p>
            </div>
        </main>
    </div>
</BaseLayout>
