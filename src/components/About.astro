            <div class="mt-24 bg-[color-mix(in_oklab,var(--primary-color)_15%,transparent)] p-12 rounded-lg text-center">
                <h2 class="text-3xl font-bold mb-4">{aboutCTATitle?.[lang as 'pt' | 'en']}</h2>
                <p class="text-slate-700 dark:text-slate-300 max-w-2xl mx-auto mb-8">{aboutCTADescription?.[lang as 'pt' | 'en']}</p>
                <a href="/waitlist" class="inline-block bg-[var(--primary-color)] text-white px-8 py-3 rounded-lg font-semibold hover:bg-opacity-90 transition-colors">{aboutCTAButtonText?.[lang as 'pt' | 'en']}</a>
