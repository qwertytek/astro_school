---
import Header from '@components/Header.astro';
import Footer from '@components/Footer.astro';
import CardRowGroup from '@components/UI/cards/CardRowGroup.astro';
const { content } = Astro.props;
const lang = Astro.params?.lang || 'pt' as 'pt' | 'en';

interface OurValuesType {
    cardTitle: {
        en: string;
        pt: string;
    };
    cardDescription: {
        en: string;
        pt: string;
    }
}
const {
    heroAboutPage,
    aboutUsSection,
    ourValuesSection,
    aboutPageCTA
} = content?.about

const heroTitle = heroAboutPage?.title
const heroDescription = heroAboutPage?.description

const aboutUsSectionTitle = aboutUsSection?.title
const aboutUsSectionDescription = aboutUsSection?.description

const ourValuesTitle = ourValuesSection?.title
const ourValuesItems = ourValuesSection?.valuesCard

const aboutCTATitle = aboutPageCTA?.title
const aboutCTADescription = aboutPageCTA?.description
const aboutCTAButtonText = aboutPageCTA?.buttonText

const convertValuesItems = (arr: OurValuesType[]) => (
    arr.map(({ cardDescription, cardTitle }) => (
        { 
            title: cardTitle?.[lang as 'pt' | 'en'],
            description: cardDescription?.[lang as 'pt' | 'en'],
        }
    ))
)
---

<div class="flex flex-col min-h-screen">
    <Header content={content?.header} />
    <main class="flex-grow py-16 md:py-24">
        <div class="container mx-auto px-4 md:px-12 lg:px-20">
            <div class="text-center max-w-4xl mx-auto">
                <h1 class="text-4xl md:text-6xl font-bold mb-4">
                    {heroTitle[0]?.[lang as 'pt' | 'en']}
                    <span class="text-[var(--primary-color)]">
                        {heroTitle[1]?.[lang as 'pt' | 'en']}
                    </span>
                </h1>
                <p class="text-lg md:text-xl text-slate-600 dark:text-slate-400 mb-12">{heroDescription?.[lang as 'pt' | 'en']}</p>
            </div>

            <div class="grid md:grid-cols-2 gap-12 items-center mb-20">
                <div>
                    <img src="https://lh3.googleusercontent.com/aida-public/AB6AXuA-PTvn7-oGOrJO899hAACN1RDXrR7_2pvabmhz6y11QrvwUBw9qWhzb-5mn4VCYHS1sxMWI5qPXxDZa25EHhHQrTvI_uyxHiGoEM84ieJLX6L05Gr0qelfl3V2HvGlugGjjwMrQzAl-fZJTnezGiExTL9IEwnN_i3owDanEcKe7WizjJ-60Yc6eyVfuuv8t1QcXn856SccK936DgVtarnbyCywJzt7rtRDbf_o62zeXGACkwAGSxbnm-GPEZa9hK6wzp-3vAE7KRk" alt="Equipa colaborando num projeto" class="rounded-lg shadow-xl w-full h-auto" />
                </div>
                <div>
                    <h2 class="text-3xl font-bold mb-4">{aboutUsSectionTitle?.[lang as 'pt' | 'en']}</h2>
                    <p class="text-slate-600 dark:text-slate-400 mb-4">{aboutUsSectionDescription?.[lang as 'pt' | 'en']}</p>
                </div>
            </div>

            <div class="text-center mb-16">
                <h2 class="text-3xl md:text-4xl font-bold">{ourValuesTitle?.[lang as 'pt' | 'en']}</h2>
            </div>
<!-- 
            <CardRowGroup cardItems={firstRowValues} />
            <div class="mt-10">
                <CardRowGroup cardItems={secondRowValues} />
            </div> -->

            <CardRowGroup cardItems={convertValuesItems(ourValuesItems)} />



            <div class="grid md:grid-cols-3 gap-8 text-center">

