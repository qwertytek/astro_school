---
import { getLang, getBasePathRedirectRoute } from "@utils/getLang";
const { content, imageUrl } = Astro.props;

const lang = getLang(Astro.params);

const { title, description, buttonText } = content || {};

const basePathRedirectRoute = getBasePathRedirectRoute(Astro.params)
---

<div class="flex flex-col lg:flex-row lg:items-start">
    <div class="flex-1 px-4 sm:px-6 md:px-8 lg:ml-20 lg:p-10 lg:pl-30 lg:flex-shrink-0">
        <h1 class="block text-2xl sm:text-3xl md:text-4xl lg:text-5xl xl:text-6xl mb-6 sm:mb-8 lg:mb-10 mt-6 sm:mt-8 lg:mt-10">
            {title?.[lang]}
        </h1>
        <p class="block text-sm sm:text-base md:text-lg lg:text-lg xl:text-xl text-gray-600 dark:text-gray-300 mb-6 sm:mb-8 lg:mb-10 w-full lg:w-2/3 mt-6 sm:mt-8 lg:mt-10">
            {description?.[lang]}
        </p>
        <div class="mt-12 sm:mt-16 lg:mt-20">
            <a href={`${basePathRedirectRoute}/subscribe`} class="inline-block bg-[var(--primary-color)] text-white font-semibold px-6 sm:px-8 py-3 sm:py-4 rounded-lg shadow-lg hover:bg-opacity-90 transition-all text-sm sm:text-base md:text-base lg:text-lg">
                {buttonText?.[lang]}
            </a>
        </div>
    </div>
    <div class="flex-1 flex justify-center lg:justify-end mt-8 lg:mt-0 lg:flex-shrink-0">
        <img 
            alt="A vibrant illustration of students engaged in online learning, with code snippets and mathematical formulas in the background." 
            src={imageUrl}
            class="w-full max-w-sm sm:max-w-md lg:max-w-none lg:w-[140%] self-end"
        />
    </div>
</div>



