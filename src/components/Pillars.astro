---
import content from '../data/home.json'
const lang = Astro.params.lang || 'pt'
---
<section class="py-20 sm:py-28 bg-white dark:bg-background-dark/50">
    <div class="container mx-auto px-4 sm:px-6 lg:px-8">
        <div class="text-center max-w-3xl mx-auto">
            <h2 class="font-display text-3xl sm:text-4xl font-bold text-slate-900 dark:text-white">{content?.[lang as 'pt' | 'en']?.section?.pillars?.title}</h2>
            <p class="mt-4 text-lg text-slate-600 dark:text-slate-400">
                {content?.[lang as 'pt' | 'en']?.section?.pillars?.description}  
            </p>
        </div>
        <div class="mt-16 grid gap-8 md:grid-cols-2 lg:max-w-5xl lg:mx-auto">
            <div class="relative group rounded-xl p-8 bg-slate-50 dark:bg-slate-900/50 border border-slate-200 dark:border-slate-800 transition-all duration-300 hover:border-[var(--primary-color)]/50 hover:shadow-2xl hover:shadow-[var(--primary-color)]/10 overflow-hidden">
                <div class="absolute top-0 right-0 -mt-10 -mr-10 w-40 h-40 bg-[var(--primary-color)]/10 rounded-full blur-3xl opacity-0 group-hover:opacity-100 transition-opacity duration-500"></div>
                <div class="relative">
                    <div class="flex-shrink-0 mb-4">
                        <svg class="h-10 w-10 text-[var(--primary-color)]" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
                            <path d="M10 20l4-16m4 4l4 4-4 4M6 16l-4-4 4-4" stroke-linecap="round" stroke-linejoin="round" stroke-width="2"></path>
                        </svg>
                    </div>
                    <div class="flex-grow">
                        <h3 class="font-display text-2xl font-bold text-slate-900 dark:text-white">{content?.[lang as 'pt' | 'en']?.section?.pillars?.cards?.coding?.title}</h3>
                        <p class="mt-3 text-base text-slate-600 dark:text-slate-400">{content?.[lang as 'pt' | 'en']?.section?.pillars?.cards?.coding?.description}</p>
                    </div>
                </div>
            </div>
            <div class="relative group rounded-xl p-8 bg-slate-50 dark:bg-slate-900/50 border border-slate-200 dark:border-slate-800 transition-all duration-300 hover:border-[var(--primary-color)]/50 hover:shadow-2xl hover:shadow-[var(--primary-color)]/10 overflow-hidden">
                <div class="absolute bottom-0 left-0 -mb-10 -ml-10 w-40 h-40 bg-[var(--primary-color)]/10 rounded-full blur-3xl opacity-0 group-hover:opacity-100 transition-opacity duration-500"></div>
                <div class="relative">
                    <div class="flex-shrink-0 mb-4">
                        <svg class="h-10 w-10 text-[var(--primary-color)]" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
                            <path d="M9 7h6m0 10v-3m-3 3h.01M9 17h.01M9 14h.01M12 14h.01M15 11h.01M12 11h.01M9 11h.01M7 21h10a2 2 0 002-2V5a2 2 0 00-2-2H7a2 2 0 00-2 2v14a2 2 0 002 2z" stroke-linecap="round" stroke-linejoin="round" stroke-width="2"></path>
                        </svg>
                    </div>
                    <div class="flex-grow">
                        <h3 class="font-display text-2xl font-bold text-slate-900 dark:text-white">{content?.[lang as 'pt' | 'en']?.section?.pillars?.cards?.math?.title}</h3>
                        <p class="mt-3 text-base text-slate-600 dark:text-slate-400">{content?.[lang as 'pt' | 'en']?.section?.pillars?.cards?.math?.description}</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>