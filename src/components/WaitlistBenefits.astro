---
import { getLang } from "@utils/getLang";
import type { LangTypeSchemaObject } from "@utils/getLang";

import CardGroup from "@components/UI/cards/CardGroup.astro";

const lang = getLang(Astro.params);

const { content } = Astro.props;
const { title, description, benefits } = content || {};

const benefitItems = benefits.map(({ description, title }: { description: LangTypeSchemaObject, title:LangTypeSchemaObject}) => (
    {
        title: title[lang],
        description: description[lang]
    }
));
