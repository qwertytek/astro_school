---
import { sanityClient } from "sanity:client";
import { getLang } from "@utils/getLang";

const lang = getLang(Astro.params);

const content = await sanityClient.fetch(`*[_type == "footerDocument" && !(_originalId in path("drafts.**"))][0]`);

const { copyrightTitle, privacyPolicyTitle, termsOfServiceTitle  } = content?.footer || {};
---
<footer class="bg-slate-100 dark:bg-slate-900/50 border-t border-slate-200 dark:border-slate-800">
    <div class="container mx-auto px-4 sm:px-6 lg:px-8 py-12">
        <div class="flex flex-col md:flex-row justify-between items-center text-center md:text-left gap-6">
            <p class="text-sm text-slate-500 dark:text-slate-400">{copyrightTitle[lang]}</p>
            <div class="flex items-center justify-center gap-6">
                <a class="text-sm text-slate-500 dark:text-slate-400 hover:text-[var(--primary-color)] transition-colors" href="#">{privacyPolicyTitle[lang]}</a>
                <a class="text-sm text-slate-500 dark:text-slate-400 hover:text-[var(--primary-color)] transition-colors" href="#">{termsOfServiceTitle[lang]}</a>
            </div>
        </div>
    </div>
</footer>